{
  "name": "typescript-api",
  "version": "1.0.0",
  "description": "Typescript Nodejs API",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && node dist/src/index.js",
    "start:dev": "ts-node-dev --respawn --transpile-only 'src/index.ts' | pino-pretty -c",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "test": "yarn test:unit && yarn test:functional",
    "test:functional": "jest --projects ./test --forceExit --runInBand",
    "test:unit": "jest",
    "style:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IgorVieira/node-typescript-api.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "api"
  ],
  "author": "Igor Vieira",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IgorVieira/node-typescript-api/issues"
  },
  "homepage": "https://github.com/IgorVieira/node-typescript-api#readme",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/config": "^0.0.38",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.170",
    "@types/module-alias": "^2.0.0",
    "@types/moment": "^2.13.0",
    "@types/multer": "^1.4.3",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.14.22",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.18.0",
    "jest": "^26.6.3",
    "pino-pretty": "^4.7.1",
    "prettier": "^2.2.1",
    "supertest": "^6.1.1",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.5",
    "@types/bcrypt": "^3.0.1",
    "@types/cors": "^2.8.10",
    "@types/express-pino-logger": "^4.0.2",
    "@types/express-rate-limit": "^5.0.0",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/pino": "^6.3.7",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "config": "^3.3.6",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-openapi-validator": "3.16.1",
    "express-pino-logger": "^6.0.0",
    "express-rate-limit": "^5.1.3",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "moment": "^2.27.0",
    "mongoose": "^5.12.3",
    "pino": "^6.3.2",
    "swagger-ui-express": "^4.1.4",
    "nock": "^13.0.11"
  }
}
